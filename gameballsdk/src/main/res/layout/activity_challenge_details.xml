<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_curved_bottom"
            android:paddingBottom="30dp"
            >

            <ImageView
                android:id="@+id/challenge_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/back_btn"

                android:layout_centerHorizontal="true"
                tool:src="@drawable/ic_diamond"
                />

            <View
                android:id="@+id/not_achieved_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/challenge_icon"
                android:layout_alignEnd="@id/challenge_icon"
                android:layout_alignLeft="@id/challenge_icon"
                android:layout_alignRight="@id/challenge_icon"
                android:layout_alignTop="@id/challenge_icon"
                android:layout_alignBottom="@id/challenge_icon"
                android:background="#90efefef"
                />

            <ImageView
                android:id="@+id/locked_challenge_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/challenge_icon"
                android:layout_alignRight="@id/challenge_icon"
                android:layout_alignTop="@id/challenge_icon"
                android:background="@drawable/bg_dark_gery_round"
                android:padding="3dp"
                android:src="@drawable/ic_lock_white"
                />

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_left"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginTop="25dp"

                />

            <TextView
                android:id="@+id/challenge_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/challenge_icon"
                android:layout_marginTop="12dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="#4a4a4a"
                tool:text="challenge name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/challenge_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/challenge_name"
                android:layout_alignStart="@id/challenge_name"
                android:layout_alignEnd="@id/challenge_name"
                android:layout_alignRight="@id/challenge_name"
                android:layout_alignLeft="@id/challenge_name"
                android:layout_marginTop="3dp"
                android:gravity="center"
                tool:text="challenge description challenge description challenge description"
                android:textColor="#828282"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/challenge_reward_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/challenge_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:drawableStart="@drawable/ic_gift"
                android:drawableLeft="@drawable/ic_gift"
                android:drawablePadding="5dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tool:text="30 Frubies | 30 Points"
                android:textStyle="bold"
                android:visibility="gone"
                tool:visibility="visible"
                />



        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mileStones_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tool:visibility="visible"
            >

            <TextView
                android:id="@+id/milestone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_constraintStart_toStartOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/milestones"
                android:textSize="20sp"
                style="@style/text_title_style"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/milestones_recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:layout_constraintTop_toBottomOf="@id/milestone_title"
                tools:layout_constraintStart_toStartOf="@id/milestone_title"
                tools:layout_constraintEnd_toEndOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:nestedScrollingEnabled="false"
                tool:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tool:listitem="@layout/milestone_item_layout"
                tool:itemCount="3"
                />

            <FrameLayout
                android:id="@+id/progress_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:layout_constraintTop_toBottomOf="@id/milestones_recyclerView"
                tools:layout_constraintStart_toStartOf="@id/milestones_recyclerView"
                tools:layout_constraintEnd_toEndOf="@id/milestones_recyclerView"
                >
                <include layout="@layout/milestone_item_layout" />
            </FrameLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                tools:layout_constraintTop_toBottomOf="@id/progress_layout"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/dash_line_separator"
                android:layout_marginTop="25dp"
                />

        </android.support.constraint.ConstraintLayout>
    
        <RelativeLayout
        android:id="@+id/challenge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:visibility="visible"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/progress"
            android:textSize="20sp"
            style="@style/text_title_style"
            />

        <TextView
            android:id="@+id/challenge_target_amount_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_title"
            android:layout_alignEnd="@id/challenge_amount_progress"
            android:layout_alignRight="@id/challenge_amount_progress"
            tool:text="10"
            android:textSize="14sp"
            android:textColor="#4a4a4a"
            android:textStyle="bold"
            tool:visibility="visible"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/challenge_amount_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/challenge_target_amount_count"
            android:layout_alignStart="@id/progress_title"
            android:layout_alignLeft="@id/progress_title"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:progress="0"
            android:layout_marginTop="5dp"
            tool:progress="50"
            android:progressDrawable="@drawable/level_progress_drawable"
            android:elevation="1dp"
            android:visibility="gone"
            tool:visibility="visible"

            />

        <TextView
            android:id="@+id/challenge_amount_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/challenge_amount_progress"
            android:layout_alignEnd="@id/challenge_amount_progress"
            android:layout_alignRight="@id/challenge_amount_progress"
            android:layout_alignLeft="@id/challenge_amount_progress"
            android:layout_below="@id/challenge_amount_progress"
            android:layout_marginTop="5dp"
            android:gravity="center"
            tool:text="amount description"
            android:textColor="#4a4a4a"
            android:textSize="14sp"
            tool:visibility="visible"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/challenge_target_action_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/challenge_amount_description"
            android:layout_alignEnd="@id/challenge_action_progress"
            android:layout_alignRight="@id/challenge_action_progress"
            android:layout_marginTop="15dp"
            tool:text="10"
            android:textSize="14sp"
            android:textColor="#4a4a4a"
            android:textStyle="bold"
            tool:visibility="visible"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/challenge_action_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/challenge_target_action_count"
            android:layout_alignStart="@id/progress_title"
            android:layout_alignLeft="@id/progress_title"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            tool:progress="50"
            android:progress="0"
            android:progressDrawable="@drawable/level_progress_drawable"
            android:elevation="1dp"
            tool:visibility="visible"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/challenge_action_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/challenge_action_progress"
            android:layout_alignEnd="@id/challenge_action_progress"
            android:layout_alignRight="@id/challenge_action_progress"
            android:layout_alignLeft="@id/challenge_action_progress"
            android:layout_below="@id/challenge_action_progress"
            android:layout_marginTop="5dp"
            android:gravity="center"
            tool:text="amount description"
            android:textColor="#4a4a4a"
            android:textSize="14sp"
            tool:visibility="visible"
            android:visibility="gone"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/challenge_action_description"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/dash_line_separator"
            android:layout_marginTop="25dp"
            />
    </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/high_score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tool:visibility="visible"
            >
            <TextView
                android:id="@+id/high_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/high_score"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/high_score_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/high_score_title"
                android:layout_marginTop="20dp"
                tool:text="3.56 KM"
                android:textColor="#a0a0a0"
                android:textSize="30sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:text="@string/status"
                style="@style/text_title_style"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                tool:src="@drawable/ic_status_locked"
                />

            <TextView
                android:id="@+id/status_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:textColor="#828282"
                android:textSize="16sp"
                tool:text="status description"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>