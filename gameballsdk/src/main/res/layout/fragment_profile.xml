<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/achievements_title"
            style="@style/text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/achievements"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/achievements_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/achievements_title"
            android:layout_alignStart="@id/achievements_title"
            android:layout_alignLeft="@id/achievements_title"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"

            tools:itemCount="9"
            tools:layoutManager="android.support.v7.widget.GridLayoutManager"
            tools:listitem="@layout/acheivments_item_layout"
            tools:orientation="vertical"
            tools:spanCount="3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/quests_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/achievements_recyclerView"
            android:layout_alignStart="@id/achievements_recyclerView"
            android:layout_alignLeft="@id/achievements_recyclerView"
            android:layout_alignEnd="@id/achievements_recyclerView"
            android:layout_alignRight="@id/achievements_recyclerView"
            android:layout_marginTop="5dp"
            tools:itemCount="9"
            tools:layoutManager="android.support.v7.widget.GridLayoutManager"
            tools:listitem="@layout/quest_item_layout"
            tools:orientation="vertical"
            tools:spanCount="3" />


        <View
            android:id="@+id/profile_data_loading_indicator_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/profile_data_loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>