<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey_curved_bottom"
                android:paddingBottom="55dp"
                >

                <ImageView
                    android:id="@+id/challenge_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/back_btn"

                    android:layout_centerHorizontal="true"
                    tool:src="@drawable/ic_diamond"
                    />

                <View
                    android:id="@+id/not_achieved_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@id/challenge_icon"
                    android:layout_alignEnd="@id/challenge_icon"
                    android:layout_alignLeft="@id/challenge_icon"
                    android:layout_alignRight="@id/challenge_icon"
                    android:layout_alignTop="@id/challenge_icon"
                    android:layout_alignBottom="@id/challenge_icon"
                    android:background="#90efefef"
                    />

                <ImageView
                    android:id="@+id/locked_challenge_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/challenge_icon"
                    android:layout_alignRight="@id/challenge_icon"
                    android:layout_alignTop="@id/challenge_icon"
                    android:background="@drawable/bg_dark_gery_round"
                    android:padding="3dp"
                    android:src="@drawable/ic_lock_white"
                    />

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_marginTop="25dp"

                    />

                <TextView
                    android:id="@+id/challenge_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/challenge_icon"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="#4a4a4a"
                    tool:text="challenge name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/challenge_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/challenge_name"
                    android:layout_alignStart="@id/challenge_name"
                    android:layout_alignEnd="@id/challenge_name"
                    android:layout_alignRight="@id/challenge_name"
                    android:layout_alignLeft="@id/challenge_name"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    tool:text="challenge description challenge description challenge description"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    />



            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/mileStones_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tool:visibility="visible"
                >

                <TextView
                    android:id="@+id/progress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_constraintStart_toStartOf="parent"
                    tools:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/milestones"
                    android:textSize="20sp"
                    style="@style/text_title_style"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/milestones_recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:layout_constraintTop_toBottomOf="@id/progress_title"
                    tools:layout_constraintStart_toStartOf="@id/progress_title"
                    tools:layout_constraintEnd_toEndOf="parent"
                    tools:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:nestedScrollingEnabled="false"
                    tool:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tool:listitem="@layout/milestone_item_layout"
                    tool:itemCount="3"
                    />

                <FrameLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:layout_constraintTop_toBottomOf="@id/milestones_recyclerView"
                    tools:layout_constraintStart_toStartOf="@id/milestones_recyclerView"
                    tools:layout_constraintEnd_toEndOf="@id/milestones_recyclerView"
                    >
                    <include layout="@layout/milestone_item_layout" />
                </FrameLayout>

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    tools:layout_constraintTop_toBottomOf="@id/progress_layout"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/dash_line_separator"
                    android:layout_marginTop="25dp"
                    />

            </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="@string/status"
            style="@style/text_title_style"
            android:textSize="20sp"
            />
        
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            tool:src="@drawable/ic_status_locked"
            />

        <TextView
            android:id="@+id/status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:textColor="#828282"
            android:textSize="16sp"
            tool:text="status description"
            android:gravity="center"
            />
    </LinearLayout>
</ScrollView>