<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey_curved_bottom"
                android:paddingBottom="55dp"
                >

                <ImageView
                    android:id="@+id/challenge_icon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    tool:src="@drawable/ic_diamond"
                    />

                <View
                    android:id="@+id/not_achieved_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@id/challenge_icon"
                    android:layout_alignEnd="@id/challenge_icon"
                    android:layout_alignLeft="@id/challenge_icon"
                    android:layout_alignRight="@id/challenge_icon"
                    android:layout_alignTop="@id/challenge_icon"
                    android:layout_alignBottom="@id/challenge_icon"
                    android:background="#90efefef"
                    />

                <ImageView
                    android:id="@+id/locked_challenge_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/challenge_icon"
                    android:layout_alignRight="@id/challenge_icon"
                    android:layout_alignTop="@id/challenge_icon"
                    android:background="@drawable/bg_dark_gery_round"
                    android:padding="3dp"
                    android:src="@drawable/ic_lock_white"
                    />

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/challenge_icon"
                    android:src="@drawable/ic_arrow_left"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/challenge_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/challenge_icon"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:textColor="#4a4a4a"
                    tool:text="challenge name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/challenge_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/challenge_name"
                    android:layout_alignStart="@id/challenge_name"
                    android:layout_alignEnd="@id/challenge_name"
                    android:layout_alignRight="@id/challenge_name"
                    android:layout_alignLeft="@id/challenge_name"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    tool:text="challenge description challenge description challenge description"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/progress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/progress"
                    style="@style/text_title_style"
                    />

                <TextView
                    android:id="@+id/target_amount_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress_title"
                    android:layout_alignEnd="@id/challenge_amount_progress"
                    android:layout_alignRight="@id/challenge_amount_progress"
                    tool:text="10"
                    android:textSize="14sp"
                    android:textColor="#4a4a4a"
                    android:textStyle="bold"
                    tool:visibility="visible"
                    android:visibility="gone"
                    />

                <ProgressBar
                    android:id="@+id/challenge_amount_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@id/target_amount_count"
                    android:layout_alignStart="@id/progress_title"
                    android:layout_alignLeft="@id/progress_title"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"
                    tool:progress="50"
                    android:progressDrawable="@drawable/level_progress_drawable"
                    android:elevation="1dp"
                    android:visibility="gone"
                    tool:visibility="visible"

                    />

                <TextView
                    android:id="@+id/target_amount_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/challenge_amount_progress"
                    android:layout_alignEnd="@id/challenge_amount_progress"
                    android:layout_alignRight="@id/challenge_amount_progress"
                    android:layout_alignLeft="@id/challenge_amount_progress"
                    android:layout_below="@id/challenge_amount_progress"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    tool:text="amount description"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp"
                    tool:visibility="visible"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/target_action_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/target_amount_description"
                    android:layout_alignEnd="@id/challenge_action_progress"
                    android:layout_alignRight="@id/challenge_action_progress"
                    android:layout_marginTop="15dp"
                    tool:text="10"
                    android:textSize="14sp"
                    android:textColor="#4a4a4a"
                    android:textStyle="bold"
                    tool:visibility="visible"
                    android:visibility="gone"
                    />

                <ProgressBar
                    android:id="@+id/challenge_action_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@id/target_action_count"
                    android:layout_alignStart="@id/progress_title"
                    android:layout_alignLeft="@id/progress_title"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"
                    tool:progress="50"
                    android:progressDrawable="@drawable/level_progress_drawable"
                    android:elevation="1dp"
                    tool:visibility="visible"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/target_action_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/challenge_action_progress"
                    android:layout_alignEnd="@id/challenge_action_progress"
                    android:layout_alignRight="@id/challenge_action_progress"
                    android:layout_alignLeft="@id/challenge_action_progress"
                    android:layout_below="@id/challenge_action_progress"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    tool:text="amount description"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp"
                    tool:visibility="visible"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/dash_line_separator"
                android:layout_marginTop="30dp"
                />

        <TextView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/status"
            style="@style/text_title_style"
            />
        
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            tool:src="@drawable/ic_status_locked"
            />

        <TextView
            android:id="@+id/status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:textColor="#828282"
            android:textSize="16sp"
            tool:text="status description"
            android:gravity="center"
            />
    </LinearLayout>
</ScrollView>