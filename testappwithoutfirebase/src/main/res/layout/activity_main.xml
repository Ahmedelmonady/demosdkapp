<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/player_id_filed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="PlayerID"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <EditText
        android:id="@+id/playerCategoryID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PlayerCategoryId (if needed)"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="register user"
        android:textAllCaps="false"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/btn_show_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="show profile" />

    <Button

        android:id="@+id/action_1004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="action 45"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_show_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show notification"
        android:visibility="gone"/>

    <Button
        android:id="@+id/action_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="action 11"
        android:visibility="gone"
        />

</LinearLayout>